{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "dom",
      "esnext"
    ],
    "types": [
      "node"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "dist/esm",
    "sourceMap": true,
    "target": "es6",
    "strict": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
